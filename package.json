{
  "name": "react-hosting",
  "version": "0.1.0",
  "private": "true",
  "scripts": {
    "start": "concurrently \"ts-node -r tsconfig-paths/register ./src/server.ts\" \"wait-on tcp:8000 && start http://localhost:8000\"",
    "dev": "ts-node-dev -r tsconfig-paths/register ./src/server.ts",
    "build:r": "yarn --cwd client build",
    "start:r": "yarn --cwd client start"
  },
  "dependencies": {
    "cookie-parser": "^1.4.5",
    "express": "^4.17.1",
    "morgan": "^1.10.0",
    "typescript": "^4.2.4"
  },
  "devDependencies": {
    "@types/cookie-parser": "^1.4.2",
    "@types/debug": "^4.1.5",
    "@types/express": "^4.17.11",
    "@types/http-errors": "^1.8.0",
    "@types/morgan": "^1.9.2",
    "@types/node": "^15.0.3",
    "concurrently": "^6.2.0",
    "ts-node": "^9.1.1",
    "ts-node-dev": "^1.1.6",
    "tsconfig-paths": "^3.9.0",
    "wait-on": "^5.3.0"
  }
}